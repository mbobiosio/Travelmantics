<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.WelcomeActivity">

    <Button
        android:id="@+id/email_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_42sdp"
        android:layout_marginLeft="@dimen/_42sdp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/_42sdp"
        android:layout_marginRight="@dimen/_42sdp"
        android:drawableStart="@drawable/ic_email"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="@dimen/_14sdp"
        android:gravity="start|center"
        android:background="@drawable/email_btn"
        android:text="@string/sign_in_with_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:paddingStart="@dimen/_45sdp"
        android:paddingLeft="@dimen/_45sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:textColor="@android:color/white"
        android:paddingRight="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/google_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_42sdp"
        android:layout_marginLeft="@dimen/_42sdp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/_42sdp"
        android:layout_marginRight="@dimen/_42sdp"
        android:background="@drawable/google_btn"
        android:drawableStart="@drawable/ic_google_plus_logo_button"
        android:drawableLeft="@drawable/ic_google_plus_logo_button"
        android:drawablePadding="@dimen/_14sdp"
        android:gravity="start|center"
        android:paddingStart="@dimen/_45sdp"
        android:paddingLeft="@dimen/_45sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:text="@string/sign_in_with_google"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_login" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>